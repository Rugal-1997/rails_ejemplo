<h2>Crear Cuenta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, "Correo Electronico" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "ContraseÃ±a" %>
    <% if @minimum_password_length %>
    <em>(minimo <%= @minimum_password_length %> caracteres)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Crear Cuenta", :class => "btn btn-warning" %>
  </div>
<% end %><br>

<%= render "devise/shared/links" %>
