<h1>Mis Tareas</h1>
<table class="table table-hover">
	<thead><th>ID</th><th>Titulo</th><th>Descripcion</th><th>Ver</th><th>Editar</th><th>Eliminar</th></thead>
	<% @tareas.each do |tarea| %>
	<tr><td><%= tarea.id %></td> <td><%= tarea.titulo %></td> <td><%= tarea.descripcion %></td>
		<td><%= link_to "Ver", tarea, class:"btn btn-secondary"%></td> 
		<td><%= link_to "Editar", edit_tarea_path(tarea), class:"btn btn-success" %></td> 
		<td><%= link_to "Eliminar", tarea, method: :delete, data: {confirm: "Estas Seguro"}, class:"btn btn-danger" %></td> 
	<% end %>
</table>

